@model Belgo.Web.Models.PesquisaModel.RelatorioModel

@{
    var container = "pergunta_" + Model.ID;
}

<script>
    $(function () {

        $('#@container').highcharts({
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false,
                type: 'pie',
                backgroundColor : '#fbfbfb',
                options3d: {
                    enabled: true,
                    alpha: 45,
                    beta: 0
                }

            },
            title: {
                text: '@Html.Raw(Model.TituloPergunta)'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                        style: {
                            color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                        }
                    }
                }
            },
            series: [{
                name: 'Participação',
                colorByPoint: true,
                data: @Html.Raw(Model.DadosSerializados)
                }]
        });

    });

</script>

<div id="@container" style="width:100%;margin-bottom:80px;display:block"></div>